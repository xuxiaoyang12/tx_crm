<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaishengit.mapper.UserMapper">
    <insert id="save">
        insert into t_user(user_name,real_name,password,create_time,state,role_id,weixin)
        values (#{userName},#{realName},#{password},#{createTime},#{state},#{roleId},#{weixin})
    </insert>
    <insert id="saveUserLog">
        insert into t_user_log (login_time,login_ip,user_id)
        VALUES (#{loginTime},#{loginIp},#{userId})
    </insert>
    <update id="update">
        update t_user SET user_name=#{userName},real_name=#{realName},password=#{password},
        state=#{state},weixin=#{weixin},role_id=#{roleId}
        where id = #{id}
    </update>



    <select id="findByUsername" resultType="com.kaishengit.pojo.User">
        select * from t_user where user_name=#{username}
    </select>
    <select id="findAllByQueryName" resultType="com.kaishengit.pojo.User">
        select t_user.*,t_role.id As 'role.id',t_role.role_name as 'role.roleName' from t_user
        left join t_role on t_role.id = t_user.role_id
        <where>
            <if test="search != null and search != ''">
                and t_user.user_name like concat('%',#{search},'%')
            </if>
        </where>
        order by id ASC
        limit ${start},${length}
    </select>
    <select id="countALl" resultType="java.lang.Long">
        select Count(*) from t_user
    </select>
    <select id="findAll" resultMap="userMap">
        SELECT * from t_user
        order by id ASC
        limit ${start},${length}
    </select>
    <select id="findAllRole" resultType="com.kaishengit.pojo.Role">
        select * from t_role
    </select>
    <select id="findUserById" resultType="com.kaishengit.pojo.User">
        select t_user.*,t_role.id As 'role.id',t_role.role_name as 'role.roleName' from t_user
        left join t_role on t_user.role_id = t_role.id
        where t_user.id = #{userId}
    </select>
    <select id="findUserLogByQueryName" resultType="com.kaishengit.pojo.UserLog">
        select t_user_log.*,t_user.user_name as 'user.userName' from t_user_log
        left join t_user on t_user.id = t_user_log.user_id
        limit ${start},${length}
    </select>
    <select id="countUserLog" resultType="java.lang.Long">
        select count(*) from t_user_log
    </select>
    <select id="countFilter" resultType="java.lang.Long">
         select count(*) from t_user
        <where>
            <if test="search != null and search != ''">
                and t_user.user_name like concat('%',#{search},'%')
            </if>
        </where>
    </select>
    <resultMap id="userMap" type="User">
        <id column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="real_name" property="realName"/>
        <result column="create_time" property="createTime"/>
        <result column="password" property="password"/>
        <result column="wenxin" property="weixin"/>
        <result column="state" property="state"/>
        <association property="role" column="roleId" javaType="Role" >
            <id column="id" property="id"/>
            <result column="role_name" property="roleName"/>
        </association>
    </resultMap>


</mapper>