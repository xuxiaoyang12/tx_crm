<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kaishengit.mapper.TaskMapper">
    <insert id="save">
        insert into t_task (title,start,end,reminder_time,color,user_id,sales_id,customer_id,done)
        values(#{title},#{start},#{end},#{reminderTime},#{color},#{userId},#{salesId},#{customerId},#{done})
</insert>
    <update id="update">
        update t_task set title = #{title},start=#{start},end=#{end},user_id=#{userId},
        sales_id =#{salesId},customer_id = #{customerId},done = #{done},color =#{color}
        ,reminder_time = #{reminderTime}
        where  id = #{id}
    </update>
    <delete id="delTaskById">
        delete from t_task where id = #{id}
    </delete>

    <select id="findAll" resultType="com.kaishengit.pojo.Task">
        select * from t_task
    </select>
    <select id="findById" resultType="com.kaishengit.pojo.Task">
        select * from t_task where id = #{id}
    </select>
    <select id="findAllByUserId" resultType="com.kaishengit.pojo.Task">
        select * from t_task where user_id = #{userId}
    </select>
</mapper>